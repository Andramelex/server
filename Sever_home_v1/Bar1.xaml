<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sever_home_v1"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" x:Class="Sever_home_v1.Bar1"
        mc:Ignorable="d"
        Title="Монитор Солнечной панели" Height="364" Width="618"  Margin="0" Icon="unnamed.ico"  ResizeMode="CanMinimize"  >

    <Grid >


        <Wpf:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Bottom" Grid.RowSpan="3" Grid.ColumnSpan="3" MinHeight="1" MinWidth="1"  >
            <Wpf:CartesianChart.AxisY>
                <Wpf:Axis Title="mA" />
            </Wpf:CartesianChart.AxisY>
            <Wpf:CartesianChart.AxisX>
                <Wpf:Axis Title="Время" LabelsRotation="-20" Labels="{Binding Labels}"/>

            </Wpf:CartesianChart.AxisX>
        </Wpf:CartesianChart>
        <TextBox x:Name="Tex1" HorizontalAlignment="Left" Height="49" Margin="480,21,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="110" BorderBrush="White"/>
        <Button Content="Обновить" HorizontalAlignment="Left" Height="35" Margin="515,289,0,0" VerticalAlignment="Top" Width="75" Click="ReloadGraf"/>
       
    </Grid>

</Window>
